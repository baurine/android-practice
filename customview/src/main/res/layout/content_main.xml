<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>

        <com.baurine.customeview.CustomTitleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            app:titleBgColour="#000000"
            app:titleText="3712"
            app:titleTextColour="#ffffff"
            app:titleTextSize="40sp"/>

        <com.baurine.customeview.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:image="@mipmap/ic_launcher"
            app:imageScaleType="center"
            app:titleText="hello android ! "
            app:titleTextColour="#ff0000"
            app:titleTextSize="30sp"/>

        <com.baurine.customeview.CustomImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:image="@mipmap/ic_launcher"
            app:imageScaleType="center"
            app:titleText="helloworldwelcome"
            app:titleTextColour="#00ff00"
            app:titleTextSize="20sp"/>

        <com.baurine.customeview.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            app:image="@mipmap/meizhi_"
            app:imageScaleType="center"
            app:titleText="妹子~"
            app:titleTextColour="#ff0000"
            app:titleTextSize="12sp"/>

        <com.baurine.customeview.CustomProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:circleWidth="10dp"
            app:firstColor="#ff0000"
            app:secondColor="#00ffff"
            app:speed="10"
            />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
